@page "/admin/user/adicionar"
@inherits CreateUserPage


<MudText Typo="Typo.h3">Novo Curso</MudText>

<MudPaper Class="pa-8 mt-4">
    <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator />        
        
       <MudTextField T="string"
                      Label="Login"
                      HelperText="Campo obrigatório"
                      InputType="InputType.Email"
                      For="@(() => InputModel.UserName)"
                      @bind-Value="InputModel.UserName" />

       <MudTextField T="string"
                      Label="E-mail"
                      HelperText="Campo obrigatório"
                      InputType="InputType.Email"
                      For="@(() => InputModel.Email)"
                      @bind-Value="InputModel.Email" />
                      
       <MudTextField T="string"
                      Label="Telefone"
                      HelperText="Informe seu número com DDD"
                      InputType="InputType.Telephone"
                      For="@(() => InputModel.PhoneNumber)"
                      @bind-Value="InputModel.PhoneNumber" />

        <MudTextField T="string"
                      Label="Senha"
                      HelperText="Campo obrigatório"
                      InputType="InputType.Password"
                      For="@(() => InputModel.Password)"
                      @bind-Value="InputModel.Password" />

        <MudTextField T="string"
                      Label="Senha"
                      HelperText="Campo obrigatório"
                      InputType="InputType.Password"
                      For="@(() => InputModel.ConfirmPassword)"
                      @bind-Value="InputModel.ConfirmPassword" />          

        <MudButton ButtonType="ButtonType.Submit"
                   Variant="Variant.Filled"
                   Color="Color.Primary">
            Salvar
        </MudButton>      
    </EditForm>
</MudPaper>