@page "/login"
@layout HeadlessLayout
@inherits LoginPage

<PageTitle>Ucode - Entrar</PageTitle>
<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-with-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">                
                <img src="imgs/Ucode.png" alt="" width="200" />
            </div>
            <MudText Typo="Typo.h5" Color="Color.Primary" Align="Align.Center" Class="font-weight-bold">
                Ucode - Controle de Notas dos Alunos
            </MudText>

            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />

                <MudTextField T="string"
                              Label="E-mail"
                              HelperText="Campo Obrigatório"
                              InputType="InputType.Email"
                              For="@(() => InputModel.Email)"
                              @bind-Value="InputModel.Email" />

                <MudTextField T="string"
                              Label="Senha"
                              HelperText="Campo Obrigatório"
                              InputType="InputType.Password"
                              For="@(() => InputModel.Password)"
                              @bind-Value="InputModel.Password" />
                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Entrar</MudButton>
                        <MudSpacer />
                        <MudButton Href="/registrar" Variant="Variant.Filled" Color="Color.Primary">Registar</MudButton>
                    }

                </div>

            </EditForm>

        </MudPaper>
    </MudItem>
</MudGrid>

